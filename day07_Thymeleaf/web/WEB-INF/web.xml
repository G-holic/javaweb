<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--thymeleaf的前缀和后缀-->
    <context-param>
        <param-name>view-prefix</param-name>
        <param-value>/pages/</param-value>
    </context-param>
    <context-param>
        <param-name>view-suffix</param-name>
        <param-value>.html</param-value>
    </context-param>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RootServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.RootServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RootServlet</servlet-name>
        <url-pattern>/root</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ToIndexPageServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.ToIndexPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToIndexPageServlet</servlet-name>
        <url-pattern>/index.abc</url-pattern>
    </servlet-mapping>
</web-app>