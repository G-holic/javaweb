<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>view-prefix</param-name>
        <param-value>/WEB-INF/pages/</param-value>
    </context-param>
    <context-param>
        <param-name>view-suffix</param-name>
        <param-value>.html</param-value>
    </context-param>
    <servlet>
        <servlet-name>ToIndexPageServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.ToIndexPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToIndexPageServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ToAdminPageServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.ToAdminPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToAdminPageServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ToRootPageServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.ToRootPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToRootPageServlet</servlet-name>
        <url-pattern>/root</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ToIfAndForServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.ToIfAndForServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToIfAndForServlet</servlet-name>
        <url-pattern>/ifAndFor</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AServlet</servlet-name>
        <servlet-class>cn.itcast.servlet.AServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AServlet</servlet-name>
        <url-pattern>/a</url-pattern>
    </servlet-mapping>
</web-app>